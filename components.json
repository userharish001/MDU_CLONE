{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "new-york",  
  "rsc": true,  
  "tsx": false,  
  "tailwind": {
    "config": "tailwind.config.mjs", 
    "css": "src/app/globals.css", 
    "baseColor": "zinc", 
    "cssVariables": true,  
    "prefix": ""  
  },
  "aliases": {
    "components": "src/components",  
    "utils": "src/lib/utils", 
    "ui": "src/components/ui", 
    "lib": "src/lib",  
    "hooks": "src/hooks"  
  },
  "iconLibrary": "lucide",  
  "extra": {
    "support": {
      "reactStrictMode": true,  
      "nextjs": {
        "enableEslint": true  
      }
    }
  }
}
